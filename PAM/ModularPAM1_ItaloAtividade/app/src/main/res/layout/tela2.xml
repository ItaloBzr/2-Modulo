<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:textColor="#2196F3"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100sp"/>

    <EditText android:id="@+id/edt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_login"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:background="@color/white"
        android:hint="Nome:"
        android:drawableStart="@drawable/contato"
        android:drawableTint="#2196F3"
        android:padding="6sp"/>

    <EditText android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_nome"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:background="@color/white"
        android:hint="email:"
        android:drawableStart="@drawable/email"
        android:drawableTint="#2196F3"
        android:padding="6sp"/>

    <EditText android:id="@+id/edt_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        android:layout_marginTop="25dp"
        android:drawableTint="#2196F3"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:background="@color/white"
        android:hint="senha:"
        android:drawableStart="@drawable/senha"
        android:padding="6sp"/>

    <Button android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_senha"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="50dp"
        android:hint="Log in"
        android:textSize="20dp"
        android:textColorHint="@color/white"
        android:backgroundTint="#2196F3"/>

    <Button android:id="@+id/btn_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:hint="Forget Password"
        android:textColorHint="#2196F3"
        android:backgroundTint="#F0EEEE"/>
</androidx.constraintlayout.widget.ConstraintLayout>