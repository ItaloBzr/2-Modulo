<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar contato"
        android:textSize="28dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText android:id="@+id/edt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        android:layout_margin="40dp"
        android:hint="Digite seu Nome"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"/>

    <EditText android:id="@+id/edt_idade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_nome"
        android:layout_margin="40dp"
        android:hint="Digite sua idade"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"/>

    <Button android:id="@+id/btn_salvar"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:hint="Salvar"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_idade"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/white"/>

    <Button android:id="@+id/btn_carregar"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:hint="Carregar"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_idade"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/white"/>

    <TextView android:id="@+id/display_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Nenhum contato salvo"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_salvar"
        tools:layout_editor_absoluteX="28dp" />
</androidx.constraintlayout.widget.ConstraintLayout>