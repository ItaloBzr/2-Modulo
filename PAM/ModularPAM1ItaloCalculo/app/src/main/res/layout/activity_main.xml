<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/fundo"
    >

    <TextView android:id="@+id/titulo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistema Calculo Nota"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textColor="@color/botao"/>


    <EditText
        android:layout_margin="35dp"
        android:id="@+id/edt_nota1"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/campo"
        android:hint="nota 1"
        android:paddingHorizontal="45dp"
        android:paddingVertical="15dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo" />

    <EditText
        android:layout_margin="35dp"
        android:inputType="number"
        android:id="@+id/edt_nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/campo"
        android:hint="nota 2"
        android:paddingHorizontal="45dp"
        android:paddingVertical="15dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo" />

    <EditText android:id="@+id/edt_nota3"
        android:inputType="number"
        android:layout_margin="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_nota1"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="45dp"
        android:paddingVertical="15dp"
        android:textColorHint="@color/black"
        android:hint="nota 3"
        android:background="@color/campo"/>

    <EditText android:id="@+id/edt_nota4"
        android:inputType="number"
        android:layout_margin="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_nota2"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="45dp"
        android:paddingVertical="15dp"
        android:textColorHint="@color/black"
        android:hint="nota 4"
        android:background="@color/campo"/>

    <EditText android:id="@+id/edt_falta"
        android:layout_margin="35dp"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_nota3"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="45dp"
        android:paddingVertical="15dp"
        android:hint="NÂ° de faltas"
        android:textColorHint="@color/black"
        android:background="@color/campo"/>

    <Button android:id="@+id/btn_calculo"
        android:layout_marginHorizontal="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:backgroundTint="@color/botao"
        android:hint="calcular"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        app:cornerRadius = "5dp"
        app:layout_constraintTop_toBottomOf="@id/edt_falta"/>

    <TextView android:id="@+id/resultado"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_calculo"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/campo"
        android:hint="Resultado:"
        android:textColorHint="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>